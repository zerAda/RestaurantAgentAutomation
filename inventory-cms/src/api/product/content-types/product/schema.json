{
    "kind": "collectionType",
    "collectionName": "products",
    "info": {
        "singularName": "product",
        "pluralName": "products",
        "displayName": "Product",
        "description": "Menu items linked to inventory"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string",
            "required": true
        },
        "code": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "price": {
            "type": "decimal"
        },
        "stock_quantity": {
            "type": "integer",
            "default": 0
        },
        "marketing_name": {
            "type": "string",
            "description": "Signature/commercial name (ex: 'Bazooka' for a burger)"
        },
        "aliases": {
            "type": "json",
            "description": "Array of alternative names/search terms: ['bazooka', 'burger bazooka', 'bzk']"
        },
        "category": {
            "type": "enumeration",
            "enum": [
                "burgers",
                "pizzas",
                "tacos",
                "salades",
                "boissons",
                "desserts",
                "specials"
            ]
        },
        "description_multilang": {
            "type": "json",
            "default": {
                "fr": "",
                "ar": "",
                "dz": ""
            }
        },
        "ingredients": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::ingredient.ingredient",
            "inversedBy": "products"
        },
        "creative_assets": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::creative-asset.creative-asset",
            "mappedBy": "parent_product"
        }
    }
}