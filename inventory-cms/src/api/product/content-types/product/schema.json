{
    "kind": "collectionType",
    "collectionName": "products",
    "info": {
        "singularName": "product",
        "pluralName": "products",
        "displayName": "Product",
        "description": "Menu items linked to inventory"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string",
            "required": true
        },
        "code": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "price": {
            "type": "decimal"
        },
        "stock_quantity": {
            "type": "integer",
            "default": 0
        },
        "ingredients": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::ingredient.ingredient",
            "inversedBy": "products"
        },
        "creative_assets": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::creative-asset.creative-asset",
            "mappedBy": "parent_product"
        }
    }
}